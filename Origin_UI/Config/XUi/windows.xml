			</rect>

			<!-- Toolbelt numbers -->
			<grid depth="1" rows="1" cols="8" pos="6,-14" cell_width="75" cell_height="75" repeat_content="false">
				<label depth="50" width="12" height="22" text="1" font_size="22" effect="outline" color="[white]" justify="center" />
